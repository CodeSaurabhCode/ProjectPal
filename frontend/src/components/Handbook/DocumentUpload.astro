---
/**
 * Document Upload Component
 * Handles file selection and upload with progress tracking
 */
---

<div class="upload-section">
  <div class="upload-header">
    <h2 class="upload-title">
      <i class="fas fa-cloud-upload-alt"></i>
      Upload Documents
    </h2>
    <p class="upload-description">
      Upload text files (.txt, .md) to enhance the PM Handbook knowledge base
    </p>
  </div>

  <div class="upload-area" id="uploadArea">
    <input 
      type="file" 
      id="fileInput" 
      accept=".txt,.md,text/plain,text/markdown"
      multiple
      hidden
    />
    
    <div class="upload-placeholder" id="uploadPlaceholder">
      <div class="upload-icon">
        <i class="fas fa-file-upload"></i>
      </div>
      <h3 class="upload-prompt">Drop files here or click to browse</h3>
      <p class="upload-hint">Supported formats: .txt, .md (max 10MB per file)</p>
      <button class="upload-browse-btn" id="browseBtnuploadBtn">
        <i class="fas fa-folder-open"></i>
        Browse Files
      </button>
    </div>

    <div class="upload-progress-list" id="uploadProgressList" style="display: none;">
      <!-- Upload progress items will be inserted here -->
    </div>
  </div>

  <div class="upload-status" id="uploadStatus" style="display: none;">
    <div class="status-icon">
      <i class="fas fa-check-circle"></i>
    </div>
    <p class="status-message"></p>
  </div>
</div>

<style>
  .upload-section {
    margin-bottom: 32px;
  }

  .upload-header {
    margin-bottom: 20px;
  }

  .upload-title {
    font-size: 20px;
    font-weight: 600;
    color: var(--text-color, #ffffff);
    margin: 0 0 8px 0;
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .upload-title i {
    color: var(--primary-color, #00796b);
  }

  .upload-description {
    font-size: 14px;
    color: var(--text-secondary, rgba(255, 255, 255, 0.6));
    margin: 0;
  }

  .upload-area {
    border: 2px dashed var(--border-color, #2d2d2d);
    border-radius: 12px;
    padding: 32px;
    background-color: var(--card-bg, #1e1e1e);
    transition: all 0.3s ease;
  }

  .upload-area.drag-over {
    border-color: var(--primary-color, #00796b);
    background-color: rgba(0, 121, 107, 0.05);
  }

  .upload-placeholder {
    text-align: center;
  }

  .upload-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #00796b 0%, #004d40 100%);
    border-radius: 50%;
    box-shadow: 0 8px 24px rgba(0, 121, 107, 0.3);
  }

  .upload-icon i {
    font-size: 36px;
    color: white;
  }

  .upload-prompt {
    font-size: 18px;
    font-weight: 600;
    color: var(--text-color, #ffffff);
    margin: 0 0 8px 0;
  }

  .upload-hint {
    font-size: 14px;
    color: var(--text-secondary, rgba(255, 255, 255, 0.6));
    margin: 0 0 20px 0;
  }

  .upload-browse-btn {
    padding: 12px 24px;
    background: linear-gradient(135deg, #00796b 0%, #004d40 100%);
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    display: inline-flex;
    align-items: center;
    gap: 8px;
  }

  .upload-browse-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(0, 121, 107, 0.4);
  }

  .upload-browse-btn:active {
    transform: translateY(0);
  }

  .upload-progress-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .upload-status {
    margin-top: 16px;
    padding: 16px;
    background-color: var(--success-bg, rgba(76, 175, 80, 0.1));
    border: 1px solid var(--success-color, #4caf50);
    border-radius: 8px;
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .upload-status.error {
    background-color: var(--error-bg, rgba(244, 67, 54, 0.1));
    border-color: var(--error-color, #f44336);
  }

  .status-icon {
    font-size: 24px;
    color: var(--success-color, #4caf50);
  }

  .upload-status.error .status-icon {
    color: var(--error-color, #f44336);
  }

  .status-message {
    margin: 0;
    font-size: 14px;
    color: var(--text-color, #ffffff);
  }

  /* Upload progress item styles */
  :global(.upload-progress-item) {
    padding: 16px;
    background-color: var(--background-color, #121212);
    border: 1px solid var(--border-color, #2d2d2d);
    border-radius: 8px;
  }

  :global(.upload-progress-header) {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 12px;
  }

  :global(.upload-file-name) {
    font-size: 14px;
    font-weight: 500;
    color: var(--text-color, #ffffff);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    flex: 1;
  }

  :global(.upload-percentage) {
    font-size: 13px;
    color: var(--text-secondary, rgba(255, 255, 255, 0.6));
    font-weight: 600;
  }

  :global(.upload-progress-bar) {
    height: 4px;
    background-color: var(--border-color, #2d2d2d);
    border-radius: 2px;
    overflow: hidden;
  }

  :global(.upload-progress-fill) {
    height: 100%;
    background: linear-gradient(90deg, #00796b 0%, #004d40 100%);
    border-radius: 2px;
    transition: width 0.3s ease;
  }

  :global(.upload-status-text) {
    margin-top: 8px;
    font-size: 12px;
    color: var(--text-secondary, rgba(255, 255, 255, 0.6));
  }

  :global(.upload-status-text.success) {
    color: var(--success-color, #4caf50);
  }

  :global(.upload-status-text.error) {
    color: var(--error-color, #f44336);
  }

  @media (max-width: 768px) {
    .upload-area {
      padding: 24px 16px;
    }

    .upload-icon {
      width: 64px;
      height: 64px;
    }

    .upload-icon i {
      font-size: 28px;
    }

    .upload-prompt {
      font-size: 16px;
    }

    .upload-hint {
      font-size: 13px;
    }
  }
</style>
